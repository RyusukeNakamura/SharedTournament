<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Set1Activity">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="・大会名を決めて下さい    " />

            <EditText
                android:id="@+id/gameName"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="大会名"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="・IDを決めて下さい(5文字以上半角英数字)" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="※仲間と共有する際必要です" />

            <EditText
                android:id="@+id/id"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="ID"
                android:singleLine="true"
                android:inputType="textVisiblePassword"/>
            <TextView
                android:id="@+id/confirmId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="・パスワードを決めてください(5文字以上半角英数字)" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="※試合結果を編集する際必要です" />

            <EditText
                android:id="@+id/password"
                android:layout_gravity="center"
                android:hint="password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textVisiblePassword"/>
            <TextView
                android:id="@+id/confirmPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>

        <Button
            android:onClick="newCreate"
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />
    </LinearLayout>
</RelativeLayout>